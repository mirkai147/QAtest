{
  "info": {
    "_postman_id": "33333333-aaaa-bbbb-cccc-0000000000v2",
    "name": "Item Grant API Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Grant Item to Player",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "const json = pm.response.json();",
              "pm.test('Item grant success is true', function () {",
              "  pm.expect(json.success).to.eql(true);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"playerId\": \"player_001\", \"itemId\": \"potion_small\", \"amount\": 1}"
        },
        "url": {
          "raw": "{{base_url}}/item/grant",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "item",
            "grant"
          ]
        }
      }
    }
  ]
}