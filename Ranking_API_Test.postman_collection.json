{
  "info": {
    "_postman_id": "22222222-aaaa-bbbb-cccc-0000000000v2",
    "name": "Ranking API Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Ranking - top 10",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "const json = pm.response.json();",
              "pm.test('Array of players exists', function () {",
              "  pm.expect(Array.isArray(json.players)).to.eql(true);",
              "});",
              "pm.test('Max 10 results', function () {",
              "  pm.expect(json.players.length <= 10).to.eql(true);",
              "});",
              "pm.test('Each player has name and score', function () {",
              "  json.players.forEach(p => {",
              "    pm.expect(p).to.have.property('name');",
              "    pm.expect(p).to.have.property('score');",
              "  });",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/ranking?limit=10",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "ranking"
          ],
          "query": [
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    }
  ]
}